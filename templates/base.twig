<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>{% block title %}{% endblock %}</title>
        
        <!-- Styles -->
        <link href="/css/style.css" rel="stylesheet">
        <link href="/css/header.css" rel="stylesheet">
        <link href="/css/aside.css" rel="stylesheet">
        <link href="/css/footer.css" rel="stylesheet">
        {% block additional_style %}{% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="/js/main.js"></script>
    </head>
    <body class='d-flex flex-column'>
        {% include 'components/header.twig' %}
        <main class='d-flex flex-row'>
            {% include 'components/aside.twig' %}
            <section id='main-section' class='d-flex flex-column'>
                <div id='main' class='flex-center'>
                    <div>
                        {% block small_header %}{% endblock %}
                    </div>
                    <div>
                        <i class="bi bi-exclamation-circle-fill"></i>
                        <p> Si sta utilizzando una versione di prova, alcune funzioni potrebbero essere limitate</p>
                    </div>
                    {% block main_block %}{% endblock %}
                </div>
                {% include 'components/footer.twig' %}
            </section>
        </main>
    </body>
</html>