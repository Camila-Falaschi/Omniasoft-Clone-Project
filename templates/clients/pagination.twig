<div>
    <ul class="pagination">
        <li class="paginate_button first disabled">
            <a href="#" aria-controls="clients" data-dt-idx="0" tabindex="0">
                <i class="bi bi-chevron-double-left"></i>
            </a>
        </li>
        <li class="paginate_button previous disabled">
            <a href="#" aria-controls="clients" data-dt-idx="1" tabindex="0">
                <i class="bi bi-chevron-left"></i>
            </a>
        </li>
        {% for page_number in total_pages %}
            <li class="paginate_button active">
                <a href="#" aria-controls="clients" data-dt-idx="2" tabindex="0">
                    {{ page_number }}
                </a>
            </li>
        {% endfor %}
        <li class="paginate_button next" id="clients_next">
            <a href="#" aria-controls="clients" data-dt-idx="5" tabindex="0">
                <i class="bi bi-chevron-right"></i>
            </a>
        </li>
        <li class="paginate_button last" id="clients_last">
            <a href="#" aria-controls="clients" data-dt-idx="6" tabindex="0">
                <i class="bi bi-chevron-double-right"></i>
            </a>
        </li>
    </ul>
</div>