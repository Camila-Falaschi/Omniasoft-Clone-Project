<form id='form' class='d-flex flex-column'>
    <div class='d-flex'>
        <label class='d-flex' for="nazione">Nazione <span class="text-danger">*</span></label>
        <input type='text' name="nazione" class="form-control" required />
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="nome">
            {# <span class="private hidden">Nome</span> #}
            <span class="company">Ragione Sociale</span>
            <span class="text-danger">*</span>
        </label>
        <input type="text" name="nome" class="form-control" id="nome" placeholder="Nominativo" required maxlength="255">
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="nome_referente">Nome Referente</label>
        <input type="text" name="nome_referente" class="form-control" id="nome_referente" placeholder="Nome Referente" maxlength="255">
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="cognome">Cognome <span class="text-danger">*</span></label>
        <input type="text" name="cognome" class="form-control" id="cognome" placeholder="Cognome" maxlength="255">
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="piva">Partita IVA <span class="text-danger">*</span></label>
        <input type="text" name="partita_iva" class="form-control" id="piva" placeholder="Partita IVA" maxlength="255" required>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="codice_fiscale">Codice Fiscale <span class="text-danger private hidden">*</span></label>
        <input type="text" name="codice_fiscale" class="form-control" id="codice_fiscale" placeholder="Codice Fiscale" maxlength="20">
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="telefono">Telefono</label>
        <div class="d-flex input-with-icon">
            <div><i class="bi bi-telephone-fill"></i></div>
            <input type="text" name="telefono" class="form-control" id="telefono" placeholder="Telefono" maxlength="50">
        </div>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="cellulare">Cellulare</label>
        <div class="d-flex input-with-icon">
            <div><i class="bi bi-telephone-fill"></i></div>
            <input type="text" name="cellulare" class="form-control" id="cellulare" placeholder="Cellulare" maxlength="50">
        </div>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="email">Email <span class="text-danger">*</span></label>
        <div class="d-flex input-with-icon">
            <div><i class="bi bi-envelope-fill"></i></div>
            <input type="email" name="email" class="form-control" id="email" placeholder="Email" required maxlength="255">
        </div>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="pec">Pec</label>
        <div class="d-flex input-with-icon">
            <div><i class="bi bi-envelope-fill"></i></div>
            <input type="email" name="pec" class="form-control" id="pec" placeholder="Email di posta certificata" maxlength="255">
        </div>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="unique_code">Codice univoco</label>
        <input type="text" name="codice_univoco" class="form-control" id="unique_code" placeholder="Codice univoco" maxlength="7">
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="provincia">Provincia <span class="text-danger">*</span></label>
        <input type='text' name="provincia" class="form-control" id="provincia" required />
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="citta">Citt√† <span class="text-danger">*</span></label>
        <input type='text' name="citta" class="form-control" id="citta" required />
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="cap">CAP <span class="text-danger">*</span></label>
        <input type="text" name="cap" class="form-control" id="cap" placeholder="Codice avviamento postale" maxlength="7" required>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="indirizzo">Indirizzo <span class="text-danger">*</span></label>
        <input type="text" name="indirizzo" class="form-control" id="indirizzo" placeholder="Indirizzo" maxlength="255" required>
    </div>
    <div class='d-flex'>
        <label class='d-flex' for="note">Note</label>
        <textarea name="note" class="form-control" id="note" placeholder="Note aggiuntive"></textarea>
    </div>
</form>